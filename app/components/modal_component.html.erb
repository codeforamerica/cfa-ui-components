<div x-transition.opacity class="absolute top-0 left-0 z-index-1000" x-show="open" x-cloak x-data="{open: false, toggle() { this.open = !this.open }}" @<%= @name %>.window="toggle()">
  <div @keyup.esc.window="open && toggle()" class="h-screen w-screen relative flex flex-row justify-center items-center bg-stone-400/50 overflow-y-hidden" x-trap.noscroll="open">
    <div x-transition x-show="open" @click.away="toggle()" class="relative flex flex-col min-h-50 max-h-[100vh] md:max-h-[80vh] overflow-auto bg-white rounded-sm border-zinc-400 border-2">
      <div class="p-[32px] space-y-4 max-w-[360px]">
        <div class="justify-between space-x-7 flex flex-row">
          <h2 class="flex"><%= header %></h2>
          <div>
            <a href="#" @click="toggle()" class="flex flex-col items-start cursor-pointer"><%= image_tag icon_image_path('xmark'), alt: icon_alt_text('xmark'), class: "w-[50px]" %></a>
          </div>
        </div>
        <%= content %>
      </div>
    </div>
  </div>
</div>
