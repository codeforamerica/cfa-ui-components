<div class="space-y-4">
  <%= @form.hidden_field @method, value: "" %>
  <% content = capture {
    @form.collection_radio_buttons(@method, @collection, @item_value_method, @item_label_method) do |radio_button_item|
      content_tag :div, class: "radio_button_item" do
        concat radio_button_item.radio_button("x-data" => "{}", "x-model" => "$store.#{@method}")
        concat radio_button_item.label
      end
    end
  } %>
  <% concat content %>
  <%= render(FormErrorsComponent.new(form: @form, method: @method)) %>
</div>

<script>
  function set_store_to_current_value() {
    Alpine.store("<%= @method %>", "<%= current_value %>");
  }

  if (window.Alpine === undefined) {
    document.addEventListener('alpine:init', set_store_to_current_value);
  } else {
    set_store_to_current_value();
  }
</script>
